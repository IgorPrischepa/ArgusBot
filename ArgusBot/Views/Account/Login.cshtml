@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
<form method="post">
    <div class="form-group">
        <label for="LoginInput">Login</label>
        <input type="text" class="form-control" id="LoginInput" name="LoginInput" placeholder="Enter login">
    </div>
    <div class="form-group">
        <label for="PasswordInput">Password</label>
        <input type="password" class="form-control" id="passwordInput" name="passwordInput" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">SighIn</button>

    <button type="submit" class="btn btn-info">Telegram</button>
</form>

<a href="@Url.ActionLink("Registration", "Account")" class="btn btn-secondary">SignUp</a>